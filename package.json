{
  "name": "gitlab-tools",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "check": "pnpm ls-lint && pnpm secret-lint && pnpm format:check && pnpm knip",
    "format": "prettier --write './**/*.{ts,js,md,json}'",
    "format:check": "prettier --list-different './**/*.{ts,js,md,json}'",
    "ls-lint": "ls-lint",
    "secret-lint": "secretlint '**/*'",
    "knip": "knip",
    "show:groups": "tsx src/commands/show-groups.command.ts",
    "show:mrs": "tsx src/commands/show-merge-requests.command.ts",
    "mr:report": "tsx src/commands/merge-requests-report.command.ts",
    "cleanup:report": "tsx src/commands/cleanup-report.command.ts",
    "debug": "tsx src/commands/debug.command.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40",
  "engines": {
    "node": ">=24.0.0"
  },
  "knip": {
    "project": [
      "src/**/*.ts"
    ],
    "ignoreDependencies": [
      "@secretlint/secretlint-rule-preset-recommend"
    ]
  },
  "devDependencies": {
    "@gitbeaker/rest": "43.8.0",
    "@ls-lint/ls-lint": "2.3.1",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.5",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/node": "24.10.0",
    "dotenv": "17.2.3",
    "knip": "5.68.0",
    "prettier": "3.6.2",
    "secretlint": "11.2.5",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
